<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Aceitas?</title>
  <style>
    body {
      background-color: #ffc8dd;
      font-family: 'Montserrat', sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      text-align: center;
    }
    #question {
      font-size: 2rem;
      font-weight: bold;
      color: #590d22;
    }
    button {
      background-color: #ffb3c1;
      border: 3px solid #ff7f89;
      font-size: 1rem;
      font-weight: bold;
      padding: 10px 20px;
      cursor: pointer;
    }
    button:hover {
      background-color: #ff7f89;
    }
    #noButton {
      position: absolute;
    }
  </style>
</head>
<body>
  <div id="question">Quer namorar comigo?</div>
  <button id="yesButton">Sim</button>
  <button id="noButton">Não</button>

  <script>
    const yesButton = document.getElementById('yesButton');
    const noButton = document.getElementById('noButton');
    const question = document.getElementById('question');

    // Centraliza os botões inicialmente
    function centerButtons() {
      const screenWidth = window.innerWidth;
      const screenHeight = window.innerHeight;
      const questionWidth = question.offsetWidth;
      const questionHeight = question.offsetHeight;
      const yesButtonWidth = yesButton.offsetWidth;
      const yesButtonHeight = yesButton.offsetHeight;
      const noButtonWidth = noButton.offsetWidth;
      const noButtonHeight = noButton.offsetHeight;

      question.style.left = `${(screenWidth - questionWidth) / 2}px`;
      question.style.top = `${(screenHeight - questionHeight) / 2 - 50}px`;

      yesButton.style.left = `${(screenWidth - yesButtonWidth) / 2}px`;
      yesButton.style.top = `${(screenHeight - yesButtonHeight) / 2 + 50}px`;

      noButton.style.left = `${(screenWidth - noButtonWidth) / 2}px`;
      noButton.style.top = `${(screenHeight - noButtonHeight) / 2 + 150}px`;
    }

    // Mover o botão "Não" aleatoriamente
    function moveNoButton(event) {
      const buttonRect = noButton.getBoundingClientRect();
      const mouseX = event.clientX;
      const mouseY = event.clientY;

      if (Math.abs(mouseX - buttonRect.left) < 70 && Math.abs(mouseY - buttonRect.top) < 70) {
        const newX = Math.random() * (window.innerWidth - buttonRect.width);
        const newY = Math.random() * (window.innerHeight - buttonRect.height);
        noButton.style.left = `${newX}px`;
        noButton.style.top = `${newY}px`;
      }
    }

    // Ação ao clicar em "Sim"
    function accept() {
      alert("Eu te amo meu amor, lanchinho mais tarde?");
    }

    // Ação ao clicar em "Não"
    function deny() {
      noButton.remove();
    }

    // Evento de clique em "Sim"
    yesButton.addEventListener('click', accept);

    // Evento de clique em "Não"
    noButton.addEventListener('click', deny);

    // Evento de movimento do mouse para mover o botão "Não"
    document.addEventListener('mousemove', moveNoButton);

    // Centralizar os elementos ao carregar a página
    window.onload = centerButtons;

    // Re-centralizar elementos ao redimensionar a janela
    window.onresize = centerButtons;
  </script>
</body>
</html>
